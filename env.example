#
# Prism .env 示例（请复制为 .env 并按需修改；不要提交真实密钥到仓库）
#

# 顶层设置
DEBUG=false
APP_NAME="Prism Framework"
APP_VERSION="2.0.0"
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeMe

# 服务器（支持嵌套变量，双下划线分隔）
SERVER__HOST=0.0.0.0
SERVER__PORT=8080
SERVER__WORKERS=4
SERVER__LOG_LEVEL=info

# 数据库
DATABASE_URL=sqlite+aiosqlite:///./ai_gateway.db

# Redis
REDIS__URL=redis://localhost:6379/0
REDIS__POOL_SIZE=10
REDIS__DECODE_RESPONSES=true
REDIS__ENABLED=false

# 缓存
CACHE__BACKEND=memory
CACHE__MEMORY_MAX_SIZE=10000
CACHE__MEMORY_TTL_SECONDS=300

# 安全（强烈建议生产使用强随机 KEY：openssl rand -hex 32）
SECURITY__SECRET_KEY=dev-secret-key-change-in-production
SECURITY__ALGORITHM=HS256
SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY__REFRESH_TOKEN_EXPIRE_DAYS=7

# 插件
PLUGINS__AUTO_LOAD=true
PLUGINS__DIRECTORY=plugins
PLUGINS__ISOLATED_ENV=false
PLUGINS__HOT_RELOAD=false
PLUGINS__HOT_RELOAD_INTERVAL=2.0
PLUGINS__VERIFY_SIGNATURES=false
PLUGINS__TRUSTED_KEYS_DIR=trusted_keys

# 沙箱
SANDBOX__ENABLED=true
SANDBOX__TIMEOUT=30
SANDBOX__MEMORY_LIMIT=512M
SANDBOX__CPU_TIME_LIMIT=300

# 速率限制
RATE_LIMITING__DEFAULT_LIMIT=100
RATE_LIMITING__DEFAULT_PERIOD=60

# 监控
MONITORING__TELEMETRY_ENABLED=false
MONITORING__OTLP_ENDPOINT=http://localhost:4317

# 生产安全基线（建议生产开启）
# PRISM_STRICT_PROD=1
